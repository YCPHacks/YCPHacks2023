        // This is the form that sends the content to Discord
        form#discordForm(onsubmit='onSubmit($("#content").val())')
          .form-group
            label(for="content") Send Content to Discord
            input#content.form-control(type="text" name="content" placeholder="Enter some text")
          .form-group
            button.btn.btn-primary(type="submit") Submit
          

